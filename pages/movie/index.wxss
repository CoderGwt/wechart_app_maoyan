scroll-view{
  white-space: nowrap;
  width: 750rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 18rpx 24rpx;
  border-bottom: 1rpx solid #e6e6e6;
  box-sizing: border-box;

}

scroll-view image{
  width: 170rpx;
  height: 230rpx;
  vertical-align: middle;  /* 让图片占满整个区域 */
}

.cell{
  display: inline-block;
  width: 170rpx;
  margin-right: 20rpx;
}

.cell:last-child{
  margin-right: 0;
}

.cell text{
  display: block;
  font-size: 22rpx;
  color: #c9c9c9;
  line-height: 1.6;

  /* 做溢出处理 */
  width: 170rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;

}

.cell .name{
  font-size: 26rpx;
  color: #505050;
  margin-top: 10rpx;
}